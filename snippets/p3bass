-- @p3bass
let v = "i" -- (1) o i
    c = 1 -- (3) 0
    b = id -- (2) brak
    in d'bass $
       (4 <~) $ every 2 (0.5 <~) $
       slow 4 . b $
       rev . chop 16 $
       bassP $ n "[0 1]/2" # s "${1:dubb}"
       # cut c
       # vowel v
