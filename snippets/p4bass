let o = 0.75
  in d'bass $ (o ~>) $
  whenmod 5 3 (density (3/2) . brak) $
  bassP $
  rev $ (0.5 ~>) $ slow 2 . chop 8 $ n "[0 1]/2" # s "${1:dubb}"
