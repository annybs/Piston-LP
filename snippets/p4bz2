d'bz $ -- every 3 brak $ -- (2) ev3 (4) ev2 (5) ev3
  whenmod 7 4 (within (0.5, 1) (density 2)) $
  (0.5 <~) $
  slow 16 . chop 32 $
  s "${1:bz}" -- (0) bz (1) bz*2 (3) bz bzl (4) bz*2 (5) ~ bzl
